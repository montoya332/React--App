{
	"presets": ["es2015", "react", "stage-1"],
	"plugins": [
		["module-resolver", {
			"alias": {
				"ReactApp": "./src",
				"actions": "./src/actionsCreator/",
				"components": "./src/components/",
				"constants": "./src/constants/",
				"stores": "./src/reducers/",
				"routes": "./src/routes/",
				"styles": "./src/styles/"
			}
		}]
	],
	"env": {
		"test": {
			"plugins": [
				"transform-decorators-legacy",
				"transform-object-rest-spread",
				"istanbul"
			]
		}
	}
}
